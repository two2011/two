<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
">

	<context:property-placeholder location="classpath*:*.properties" />
	<context:annotation-config />
	<bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" />
	<bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor" />


	<bean id="server" class="pl.edu.agh.two.mud.server.Server" scope="singleton" />
	<bean id="testCommand" class="pl.edu.agh.two.mud.server.command.TestCommand" scope="prototype" />
	<bean id="registry" class="pl.edu.agh.two.mud.server.command.registry.ContextCommandRegistry" init-method="buildRegistry" />
	<bean id="mailer" class="pl.edu.agh.two.mud.server.mail.Mailer" scope="singleton" />
	<bean id="serviceRegistry" class="pl.edu.agh.two.mud.server.ServiceRegistry" scope="singleton" />
</beans>